{
  "name": "calendar-clock",
  "version": "0.1.0",
  "private": true,
  "main": "main/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "node scripts/build-electron.js",
    "electron:package": "node scripts/build-electron.js --package"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.11.2",
    "chart.js": "^4.5.1",
    "clsx": "^2.1.1",
    "electron-serve": "^1.1.0",
    "framer-motion": "^12.29.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.4",
    "next-auth": "^4.24.13",
    "next-pwa": "^5.6.0",
    "react": "19.2.3",
    "react-chartjs-2": "^5.3.1",
    "react-dom": "19.2.3",
    "react-redux": "^9.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "concurrently": "^9.2.1",
    "electron": "^40.2.1",
    "electron-builder": "^26.7.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "tailwindcss": "^4",
    "wait-on": "^9.0.3"
  },
  "build": {
    "productName": "CalendarClock",
    "appId": "com.example.calendarclock",
    "asar": true,
    "npmRebuild": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "package.json",
      "main/**/*",
      "out/**/*"
    ],
    "win": {
      "target": "nsis"
    }
  }
}